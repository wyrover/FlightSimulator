			<Left dir="../asset/texture/sky_lf.tga" />
			<Right dir="../asset/texture/sky_rt.tga" />
			<Top dir="../asset/texture/sky_tp.tga" />
			<Bottom dir="../asset/texture/sky_bt.tga" />
